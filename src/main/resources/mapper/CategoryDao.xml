<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htr.dao.CategoryDao">

    <resultMap id="ResultCategory" type="Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="listAllCategories" resultMap="ResultCategory">
        SELECT id, name, description FROM t_category
    </select>

    <select id="getCategoryById" parameterType="int" resultMap="ResultCategory">
        SELECT id, name, description FROM t_category WHERE id = #{id}
    </select>

</mapper>
